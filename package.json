{
  "name": "tandem",
  "version": "0.1.0",
  "description": "King's College London's 2017 SEG Group Project - Northen Lights - social medium for language learning",
  "main": "index.js",
  "repository": {},
  "author": "loopiezlol",
  "license": "MIT",
  "scripts": {
    "web-app": "cd client-web-app && ../node_modules/webpack-dev-server/bin/webpack-dev-server.js --content-base ./dist/ --hot --progress --colors",
    "backend": "cd backend && nodemon app.js",
    "backend:deploy": "git push heroku master",
    "web-app:prod": "cd client-web-app && ../node_modules/webpack/bin/webpack.js --config ./webpack.config.production.babel.js --progress --colors -p",
    "web-app:deploy": "yarn web-app:prod && git subtree push --prefix client-web-app/dist origin gh-pages",
    "hybrid:dev": "cd client-hybrid && ../node_modules/webpack-dev-server/bin/webpack-dev-server.js --content-base .dist/ --hot --progress --colors",
    "hybrid:watch": "cd client-hybrid && ../node_modules/webpack/bin/webpack.js --config ./webpack.config.production.babel.js --progress --colors --watch",
    "hybrid:build": "cd client-hybrid && ../node_modules/webpack/bin/webpack.js --config ./webpack.config.production.babel.js --progress --colors -p",
    "hybrid:ios": "yarn hybrid:build && cd client-hybrid && cordova run ios",
    "hybrid:android": "yarn hybrid:build && cd client-hybrid && cordova run android",
    "hybrid:android:reload": "cd client-hybrid && cordova run android -- --live-reload",
    "hybrid:ios:reload": "cd client-hybrid && cordova run ios -- --live-reload"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-latest": "^6.22.0",
    "babel-register": "^6.23.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "^2.0.0-beta",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "react-hot-loader": "^1.3.1",
    "sass-loader": "^6.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.16.0",
    "co-express": "^1.2.2",
    "cors": "^2.8.1",
    "email-verification": "^0.4.5",
    "express": "^4.14.1",
    "jsonwebtoken": "^7.3.0",
    "material-ui": "^0.17.0",
    "mongoose": "^4.8.1",
    "morgan": "^1.8.1",
    "paper-react": "^0.0.2",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-emoj": "^0.1.2",
    "react-emoji": "^0.4.4",
    "react-image": "^0.1.0",
    "react-router": "^3.0.2",
    "react-tap-event-plugin": "^2.0.1",
    "reflux": "^6.0.0",
    "sendbird": "^3.0.26",
    "superagent": "^3.4.1",
    "validator": "^6.2.1"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "plugins": [
      "import"
    ],
    "rules": {
      "jsx-a11y/no-marquee": 0,
      "jsx-a11y/no-static-element-interactions": 0
    },
    "env": {
      "browser": true,
      "es6": true,
      "commonjs": true
    },
    "parser": "babel-eslint"
  },
  "babel": {
    "presets": [
      "react",
      "latest"
    ]
  },
  "engines": {
    "node": "6.7.0"
  }
}
